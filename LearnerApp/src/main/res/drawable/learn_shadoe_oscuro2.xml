<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingDefaultResource">

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:bottom="5dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#00AFDDDB" />

            <corners android:radius="@dimen/learn_spacing_standard" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />

            <solid android:color="#06AFDDDB" />

            <corners android:radius="@dimen/learn_spacing_standard" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="0dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#05AFDDDB" />

            <corners android:radius="@dimen/learn_spacing_standard" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="4dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#00E2E2E2" />

            <corners android:radius="@dimen/learn_spacing_standard" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1.5dp"
                android:left="1.5dp"
                android:right="1.5dp"
                android:top="1.5dp" />

            <solid android:color="#14E2E2E2" />

            <corners android:radius="@dimen/learn_spacing_standard" />
        </shape>
    </item>

    <!-- Background -->
    <item
        android:id="@+id/itemShape">
        <shape>
            <solid android:color="@color/fondo_blank" />

            <corners android:radius="@dimen/learn_spacing_standard" />
        </shape>
    </item>

</layer-list>