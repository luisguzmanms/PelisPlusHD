<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/learn_shadoe_oscuro2"
    android:gravity="center"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardviewDestacado"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:background="@drawable/learn_shadoe_oscuro"
        app:cardBackgroundColor="@color/fondo_black2"
        app:cardCornerRadius="@dimen/learn_spacing_middle"
        app:cardElevation="@dimen/learn_spacing_standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFondoDestacado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/style_video_player_video_seekbar"
                android:scaleType="centerCrop"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="centerCrop"
            android:src="@color/cardview_shadow_start_color" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="fitEnd"
            android:src="@drawable/gradient6" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="centerCrop"
            android:src="@color/cardview_shadow_start_color" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="centerCrop"
            android:src="@color/cardview_shadow_start_color" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="fitStart"
            android:src="@drawable/learen_walk_bg" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="fitEnd"
            android:src="@drawable/learen_walk_bg" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="fitEnd"
            android:src="@drawable/learen_walk_bg" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="fitEnd"
            android:src="@drawable/learen_walk_bg" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="fitEnd"
            android:src="@drawable/learen_walk_bg" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="fitEnd"
            android:src="@drawable/learen_walk_bg" />

        <TextView
            android:id="@+id/tvTituloDestacado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/style_video_player_video_bottom_seekbar"
            android:fontFamily="sans-serif-black"
            android:gravity="bottom"
            android:padding="10dp"
            android:paddingRight="20dp"
            android:textAppearance="@style/LearnHeadingBig"
            android:textColor="@color/buttonBg"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="Business management En la maÃ±ana" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardImg"
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="30dp"
            android:background="@drawable/learn_shadoe_oscuro"
            app:cardBackgroundColor="@color/fondo_black2"
            app:cardCornerRadius="@dimen/learn_spacing_middle"
            app:cardElevation="5dp">

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spinKitView"
                style="@style/Wrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:SpinKit_Color="@color/learn_colorPrimary"
                app:SpinKit_Style="FadingCircle" />

            <ImageView
                android:id="@+id/imgPrincipalDestacado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>